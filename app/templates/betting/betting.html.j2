
{% extends "base.html.j2" %}
{% block container %}
<div class="betting">
    <h1>These are the matchups I'm tracking</h1>
    {% for match in matchups%}
        <h5>{{match}}</h5>
    {%endfor%}
    <br>
    <h1>These are the odds I'm tracking</h1>
    <h4>First Matchup!</h4>
    {% for odd in odds %}
        <h5>{{odd}} -- index: {{loop.index}}</h5>
        {% if loop.index % 6 == 0 %}
            <br><h4>Next Matchup!</h4><br>
        {% endif %}
    {%endfor%}
</div>
<script src="{{ url_for('static', filename='js/betting.js')}}"></script>
{% endblock container %}
