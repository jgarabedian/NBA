{% block head %}
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/betting.css.jinja') }}">
{% endblock head %}
{% extends "base.html.j2" %}
{% block container %}
<div class="betting">
    {% for odd in odds|batch((companies|length), '-') -%}
    <div class="betting__matchup">
        <div class="betting__matchup__game">
            <h2 class="betting__matchup__game__header">{{matchups[loop.index - 1]}}</h2>
        </div>
        <div class="betting__matchup__spread">
            {% for column in odd %}
                <div class="betting__matchup__spread__content">
                    <h5>{{companies[loop.index - 1]}}</h5>
                    <p>{{column}}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    {%endfor%}
    <div class="stats__container">
        {% block stats %}
        {% endblock %}
    </div>
</div>
<script src="{{ url_for('static', filename='js/betting.js')}}"></script>
{% if renderStats != None %}
        <script>window.onload = function () {
            setTimeout(function() {
                this.isolateMatchups();
                this.focusMatchups({{urlMatch}});
            }, 2000);
        }</script>
    {% else %}
        <script>window.onload = function () {
            this.isolateMatchups();
        }</script>
    {% endif %}
{% endblock container %}
